<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/colorPrimaryDark"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_product_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        style="@style/suzukiHeader2"
        android:layout_marginTop="34dp"

        android:text="Featured Product"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="15sp"

        />

    <ImageView
        android:id="@+id/iv_product_logo"
        android:layout_width="0dp"
        android:layout_height="100dp"

        app:layout_constraintTop_toBottomOf="@id/tv_product_heading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintDimensionRatio="w,3:1"
        android:src="@drawable/img_crossover_logo"
        />

    <TextView
        android:id="@+id/tv_product_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_product_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="The rough road raider for adventure\nacross boarders"
        android:gravity="center"
        android:textColor="@android:color/white"
        style="@style/suzukiTextBody1"
        android:textSize="15sp"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_featured_products"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_product_caption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bar1"
        tools:layout="@layout/item_featured_product"
        />

    <View
        android:id="@+id/bar1"
        android:layout_width="32dp"
        android:layout_height="4.2dp"

        app:layout_constraintTop_toBottomOf="@id/vp_featured_products"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bar2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_grey_1000"
        android:layout_marginRight="10dp"

        app:layout_constraintHorizontal_chainStyle="packed"

        />

    <View
        android:id="@+id/bar2"
        android:layout_width="32dp"
        android:layout_height="4.2dp"

        app:layout_constraintTop_toTopOf="@id/bar1"
        app:layout_constraintLeft_toRightOf="@id/bar1"
        app:layout_constraintRight_toLeftOf="@id/bar3"
        app:layout_constraintBottom_toBottomOf="@id/bar1"
        android:layout_marginRight="10dp"
        android:background="@color/color_grey_1000"
        />

    <View
        android:id="@+id/bar3"
        android:layout_width="32dp"
        android:layout_height="4.2dp"

        app:layout_constraintTop_toTopOf="@id/bar1"
        app:layout_constraintLeft_toRightOf="@id/bar2"
        app:layout_constraintRight_toLeftOf="@id/bar4"
        app:layout_constraintBottom_toBottomOf="@id/bar1"
        android:layout_marginRight="10dp"
        android:background="@color/color_grey_1000"
        />

    <View
        android:id="@+id/bar4"
        android:layout_width="32dp"
        android:layout_height="4.2dp"

        app:layout_constraintTop_toTopOf="@id/bar1"
        app:layout_constraintLeft_toRightOf="@id/bar3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bar1"
        android:background="@color/color_grey_1000"
        />



</androidx.constraintlayout.widget.ConstraintLayout>