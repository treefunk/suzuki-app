<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="12dp"


    app:cardElevation="1dp"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">



    <View
        android:id="@+id/box_date"
        android:layout_width="53.5dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/label_beast_nickname"
        app:layout_constraintBottom_toBottomOf="@id/tv_date_purchase"
        app:layout_constraintRight_toLeftOf="@id/label_beast_nickname"
        android:background="@drawable/shape_rect_blue_semi_rounded_corners"
        android:backgroundTint="@color/color_purple_100"
        />

    <TextView
        android:id="@+id/tv_month"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.3"
        app:layout_constraintLeft_toLeftOf="@id/box_date"
        app:layout_constraintTop_toTopOf="@id/box_date"
        app:layout_constraintRight_toRightOf="@id/box_date"
        app:layout_constraintBottom_toTopOf="@id/tv_day"
        android:layout_marginTop="6dp"
        android:text="JUL"
        android:gravity="bottom|center_horizontal"
        android:fontFamily="@font/forza_medium"
        style="@style/suzukiSemiBlackText1.cardLabel"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.7"
        app:layout_constraintTop_toBottomOf="@id/tv_month"
        app:layout_constraintLeft_toLeftOf="@id/box_date"
        app:layout_constraintBottom_toBottomOf="@id/box_date"
        app:layout_constraintRight_toRightOf="@id/box_date"
        android:text="05"
        android:gravity="center"
        style="@style/suzukiHeader1"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        />


    <TextView
        android:id="@+id/label_beast_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/suzukiHeader2.labelCustomerCare"
        android:layout_marginTop="10dp"
        android:text="Beast's Nickname"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/box_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/label_date_purchase"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        android:layout_marginLeft="6dp"

        />



    <TextView
        android:id="@+id/label_date_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/suzukiSemiBlackText1"
        app:layout_constraintTop_toBottomOf="@id/label_beast_nickname"
        app:layout_constraintLeft_toRightOf="@id/box_date"
        app:layout_constraintBottom_toTopOf="@id/tv_date_purchase"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/forza_bold"
        android:textColor="@color/color_black_alpha55"
        android:text="DATE OF PURCHASE:"
        android:layout_marginLeft="6dp"

        />


    <TextView
        android:id="@+id/tv_date_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/suzukiSemiBlackText1"
        app:layout_constraintTop_toBottomOf="@id/label_date_purchase"
        app:layout_constraintLeft_toRightOf="@id/box_date"
        app:layout_constraintBottom_toBottomOf="parent"

        android:fontFamily="@font/overpass_bold"
        android:textColor="@color/color_black_alpha55"
        android:text="January 20, 2019"
        android:layout_marginLeft="6dp"

        />


    <Button
        android:id="@+id/btn_more_info"
        android:layout_width="100dp"
        android:layout_height="32.5dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        style="@style/suzukiButton3"
        android:text="more info"
        app:backgroundTint="@color/color_blue_300"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>