<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/img_main_bg"
    tools:context=".features.motorcycle_models.MotorcycleModelsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/filter_background"

        android:layout_marginTop="15dp"

        style="@style/suzukiHeader1"
        android:gravity="center"
        android:text="WHERE DO YOU WANT TO GO?"
        android:textSize="19sp"
        android:elevation="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        tools:ignore="NotSibling" />

    <View
        android:id="@+id/box_motorcycle_models"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_spare_parts"
        app:layout_constraintBottom_toTopOf="@id/box_dealer_locator"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_motorcycle_models"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_motorcycle_models"
        app:layout_constraintLeft_toLeftOf="@id/box_motorcycle_models"
        app:layout_constraintRight_toRightOf="@id/box_motorcycle_models"
        app:layout_constraintBottom_toTopOf="@id/label_motorcycle_models"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_motorcycle_models"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_motorcycle_models"
        app:layout_constraintRight_toRightOf="@id/box_motorcycle_models"
        app:layout_constraintBottom_toBottomOf="@id/box_motorcycle_models"
        style="@style/suzukiFullMenuLabel"
        android:text="MOTORCYCLE\nMODELS"
        />

    <View
        android:id="@+id/box_dealer_locator"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/box_motorcycle_models"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_service_centers"
        app:layout_constraintBottom_toTopOf="@id/box_compare_models"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_dealer_locator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_dealer_locator"
        app:layout_constraintLeft_toLeftOf="@id/box_dealer_locator"
        app:layout_constraintRight_toRightOf="@id/box_dealer_locator"
        app:layout_constraintBottom_toTopOf="@id/label_dealer_locator"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_dealer_locator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_dealer_locator"
        app:layout_constraintLeft_toLeftOf="@id/box_dealer_locator"
        app:layout_constraintRight_toRightOf="@id/box_dealer_locator"
        app:layout_constraintBottom_toBottomOf="@id/box_dealer_locator"
        style="@style/suzukiFullMenuLabel"
        android:text="DEALER\nLOCATOR"
        />


    <View
        android:id="@+id/box_compare_models"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/box_dealer_locator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_my_suzuki_diary"
        app:layout_constraintBottom_toTopOf="@id/box_whats_new"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_compare_models"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_compare_models"
        app:layout_constraintLeft_toLeftOf="@id/box_compare_models"
        app:layout_constraintRight_toRightOf="@id/box_compare_models"
        app:layout_constraintBottom_toTopOf="@id/label_compare_models"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_compare_models"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_compare_models"
        app:layout_constraintLeft_toLeftOf="@id/box_compare_models"
        app:layout_constraintRight_toRightOf="@id/box_compare_models"
        app:layout_constraintBottom_toBottomOf="@id/box_compare_models"
        style="@style/suzukiFullMenuLabel"
        android:text="COMPARE\nMODELS"
        />


    <View
        android:id="@+id/box_whats_new"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/box_compare_models"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_extract_data"
        app:layout_constraintBottom_toTopOf="@id/box_safety_tips"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_whats_new"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_whats_new"
        app:layout_constraintLeft_toLeftOf="@id/box_whats_new"
        app:layout_constraintRight_toRightOf="@id/box_whats_new"
        app:layout_constraintBottom_toTopOf="@id/label_whats_new"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_whats_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_whats_new"
        app:layout_constraintLeft_toLeftOf="@id/box_whats_new"
        app:layout_constraintRight_toRightOf="@id/box_whats_new"
        app:layout_constraintBottom_toBottomOf="@id/box_whats_new"
        style="@style/suzukiFullMenuLabel"
        android:text="WHAT'S\nNEW"
        />


    <View
        android:id="@+id/box_safety_tips"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/box_whats_new"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_customer_care"
        app:layout_constraintBottom_toTopOf="@id/ib_close"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_safety_tips"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_safety_tips"
        app:layout_constraintLeft_toLeftOf="@id/box_safety_tips"
        app:layout_constraintRight_toRightOf="@id/box_safety_tips"
        app:layout_constraintBottom_toTopOf="@id/label_safety_tips"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_safety_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_safety_tips"
        app:layout_constraintLeft_toLeftOf="@id/box_safety_tips"
        app:layout_constraintRight_toRightOf="@id/box_safety_tips"
        app:layout_constraintBottom_toBottomOf="@id/box_safety_tips"
        style="@style/suzukiFullMenuLabel"
        android:text="SAFETY TIPS WITH\nSUZUKI SAFETY\nRIDING AUTHORITY"
        />



    <!--   column 2 -->

    <View
        android:id="@+id/box_spare_parts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/box_motorcycle_models"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box_service_centers"

        android:layout_marginRight="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_spare_parts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_spare_parts"
        app:layout_constraintLeft_toLeftOf="@id/box_spare_parts"
        app:layout_constraintRight_toRightOf="@id/box_spare_parts"
        app:layout_constraintBottom_toTopOf="@id/label_spare_parts"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_spare_parts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_spare_parts"
        app:layout_constraintLeft_toLeftOf="@id/box_spare_parts"
        app:layout_constraintRight_toRightOf="@id/box_spare_parts"
        app:layout_constraintBottom_toBottomOf="@id/box_spare_parts"
        style="@style/suzukiFullMenuLabel"
        android:text="SPARE\nPARTS"
        />



    <View
        android:id="@+id/box_service_centers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_spare_parts"
        app:layout_constraintLeft_toRightOf="@id/box_dealer_locator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box_my_suzuki_diary"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_service_centers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_service_centers"
        app:layout_constraintLeft_toLeftOf="@id/box_service_centers"
        app:layout_constraintRight_toRightOf="@id/box_service_centers"
        app:layout_constraintBottom_toTopOf="@id/label_service_centers"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_service_centers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_service_centers"
        app:layout_constraintLeft_toLeftOf="@id/box_service_centers"
        app:layout_constraintRight_toRightOf="@id/box_service_centers"
        app:layout_constraintBottom_toBottomOf="@id/box_service_centers"
        style="@style/suzukiFullMenuLabel"
        android:text="SERVICE\nCENTERS"
        />




    <View
        android:id="@+id/box_my_suzuki_diary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_service_centers"
        app:layout_constraintLeft_toRightOf="@id/box_compare_models"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box_extract_data"

        android:layout_marginRight="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_my_suzuki_diary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_my_suzuki_diary"
        app:layout_constraintLeft_toLeftOf="@id/box_my_suzuki_diary"
        app:layout_constraintRight_toRightOf="@id/box_my_suzuki_diary"
        app:layout_constraintBottom_toTopOf="@id/label_my_suzuki_diary"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_my_suzuki_diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_my_suzuki_diary"
        app:layout_constraintLeft_toLeftOf="@id/box_my_suzuki_diary"
        app:layout_constraintRight_toRightOf="@id/box_my_suzuki_diary"
        app:layout_constraintBottom_toBottomOf="@id/box_my_suzuki_diary"
        style="@style/suzukiFullMenuLabel"
        android:text="MY SUZUKI\nDIARY"
        />


    <View
        android:id="@+id/box_extract_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_my_suzuki_diary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/box_whats_new"
        app:layout_constraintBottom_toTopOf="@id/box_customer_care"

        android:layout_marginRight="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_extract_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_extract_data"
        app:layout_constraintLeft_toLeftOf="@id/box_extract_data"
        app:layout_constraintRight_toRightOf="@id/box_extract_data"
        app:layout_constraintBottom_toTopOf="@id/label_extract_data"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_extract_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_extract_data"
        app:layout_constraintLeft_toLeftOf="@id/box_extract_data"
        app:layout_constraintRight_toRightOf="@id/box_extract_data"
        app:layout_constraintBottom_toBottomOf="@id/box_extract_data"
        style="@style/suzukiFullMenuLabel"
        android:text="EXTRACT\nDATA"
        />


    <View
        android:id="@+id/box_customer_care"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_extract_data"
        app:layout_constraintLeft_toRightOf="@id/box_safety_tips"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_close"

        android:layout_marginRight="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_customer_care"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_customer_care"
        app:layout_constraintLeft_toLeftOf="@id/box_customer_care"
        app:layout_constraintRight_toRightOf="@id/box_customer_care"
        app:layout_constraintBottom_toTopOf="@id/label_customer_care"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/label_customer_care"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_customer_care"
        app:layout_constraintLeft_toLeftOf="@id/box_customer_care"
        app:layout_constraintRight_toRightOf="@id/box_customer_care"
        app:layout_constraintBottom_toBottomOf="@id/box_customer_care"
        style="@style/suzukiFullMenuLabel"
        android:text="CUSTOMER\nCARE"
        />



    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        android:src="@drawable/ic_close"
        android:scaleType="centerInside"
        android:background="?android:selectableItemBackgroundBorderless"
        android:layout_marginRight="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        android:elevation="30dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>