<?xml version="1.0" encoding="utf-8"?>
<merge android:id="@+id/chipgroup_change_oil"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"

    app:layout_constraintTop_toBottomOf="@id/label_change_oil"
    app:layout_constraintLeft_toLeftOf="@id/label_change_oil"
    app:layout_constraintRight_toRightOf="@id/box_maintenance"
    android:layout_marginTop="2dp"


    tools:parentTag="com.google.android.material.chip.ChipGroup"
    >

    <com.google.android.material.chip.Chip
        android:id="@+id/choice_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK"
        style="@style/suzukiChoiceChip"
        android:tag="1"
        android:background="@drawable/selector_toggle_rect_blue"
        />

    <com.google.android.material.chip.Chip
        android:id="@+id/choice_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPLETED"

        android:tag="2"
        style="@style/suzukiChoiceChip"
        android:background="@drawable/selector_toggle_rect_blue"
        />
</merge>