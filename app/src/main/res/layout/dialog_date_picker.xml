<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorPrimaryDark"
    >



    <View
        android:id="@+id/dialog_box"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@id/ib_close"
        app:layout_constraintLeft_toLeftOf="@id/date_picker"
        app:layout_constraintRight_toRightOf="@id/date_picker"
        app:layout_constraintBottom_toBottomOf="@id/date_picker"


        android:background="@drawable/shape_rect_grey_semi_rounded_corners"
        />


    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ib_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        />


    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/date_picker"
        app:layout_constraintLeft_toLeftOf="@id/date_picker"
        app:layout_constraintBottom_toTopOf="@id/date_picker"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_close"

        />
    




</androidx.constraintlayout.widget.ConstraintLayout>