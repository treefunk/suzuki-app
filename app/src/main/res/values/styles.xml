<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_blue_300</item>
        <item name="colorControlHighlight">@color/color_blue_300</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="cornerFamily">cut</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="suzukiHeader1">
        <item name="android:textSize">19.5sp</item>

        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">@color/color_blue_100</item>
        <item name="android:fontFamily">@font/forza_black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="suzukiHeader2">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_blue_100</item>
        <item name="android:fontFamily">@font/forza_medium</item>

        <item name="fontWeight">900</item>
    </style>
    
    <style name="SuzukiMainMenuNavText">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_blue_200</item>
        <item name="android:fontFamily">@font/forza_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="suzukiTextBody1">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/overpass_regular</item>
        <item name="android:textColor">@color/color_blue_100</item>
    </style>

    <style name="suzukiTextLink" parent="suzukiTextBody1">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/overpass_black</item>
        <item name="android:textColor">@color/color_blue_300</item>
    </style>

    <style name="suzukiEditText1">
        <item name="android:background">@color/color_blue_900</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/color_blue_100</item>
        <item name="android:textSize">10.5sp</item>
    </style>

    <style name="suzukiButton1">
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:minWidth">180dp</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">12.5sp</item>
        <item name="fontFamily">@font/overpass_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_rectangle_blue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="backgroundTint">@color/color_blue_200</item>
    </style>

    <style name="suzukiButtonFacebook">
        <item name="android:minWidth">180dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@color/color_facebook_blue</item>
    </style>

</resources>
