<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="12dp"


    app:cardElevation="1dp"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <TextView
        android:id="@+id/label_beast_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/suzukiHeader2.labelCustomerCare"
        android:paddingTop="12dp"

        android:text="Beast's Nickname"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/label_date_purchase"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"

        />



    <TextView
        android:id="@+id/label_date_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/suzukiSemiBlackText1"
        app:layout_constraintTop_toBottomOf="@id/label_beast_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_date_purchase"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/forza_bold"
        android:textColor="@color/color_black_alpha55"
        android:text="DATE OF PURCHASE:"
        />


    <TextView
        android:id="@+id/tv_date_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/suzukiSemiBlackText1"
        app:layout_constraintTop_toBottomOf="@id/label_date_purchase"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"

        android:fontFamily="@font/overpass_bold"
        android:textColor="@color/color_black_alpha55"
        android:text="January 20, 2019"
        />


    <Button
        android:id="@+id/btn_edit"
        android:layout_width="0dp"
        android:layout_height="32.5dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/btn_more_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_more_info"
        app:layout_constraintVertical_chainStyle="spread"


        style="@style/suzukiButton3"
        android:text="EDIT"
        />

    <Button
        android:id="@+id/btn_more_info"
        android:layout_width="100dp"
        android:layout_height="32.5dp"

        app:layout_constraintTop_toBottomOf="@id/btn_edit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        style="@style/suzukiButton3"
        android:text="more info"
        app:backgroundTint="@color/color_blue_300"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>