<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_main_bg"
        android:paddingBottom="100dp"
        tools:context=".features.motorcycle_models.MotorcycleModelsFragment">


        <ImageView
            android:id="@+id/img_motorcycle"
            android:layout_width="250dp"
            android:layout_height="150dp"

            app:layout_constraintTop_toBottomOf="@id/filter_white_background_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_menu_compare_models"
            app:layout_constraintVertical_bias="0.20"

            />

        <TextView
            android:id="@+id/label_no_registered_motorcycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="SELECT MOTORCYCLE\nMODELS TO COMPARE"
            android:gravity="center"
            style="@style/suzukiHeader1"
            app:layout_constraintTop_toBottomOf="@id/img_motorcycle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="15sp"
            />


        <View
            android:id="@+id/filter_white_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/filter_background"
            app:layout_constraintLeft_toRightOf="@id/label_select_motorcycle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/filter_background"

            />

        <ImageView
            android:id="@+id/filter_background"
            android:layout_width="180dp"
            android:layout_height="37.5dp"
            android:background="@drawable/rectangle_blue_slanted_2"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_select_motorcycle"
            style="@style/suzukiTextBody2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:letterSpacing="0.04"
            android:text="SELECT MOTORCYCLE 1"
            android:textColor="@android:color/white"
            android:textSize="11.5sp"

            app:layout_constraintBottom_toBottomOf="@id/filter_background"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/filter_background"
            app:layout_constraintRight_toRightOf="@id/filter_background"
            app:layout_constraintTop_toTopOf="@id/filter_background" />

        <AutoCompleteTextView
            android:id="@+id/tv_filter_value"
            style="@style/suzukiTextBody2"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"

            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text=""
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@id/filter_white_background"
            app:layout_constraintRight_toRightOf="@id/ib_dropdown_arrow"
            app:layout_constraintHorizontal_bias="0"

            app:layout_constraintHorizontal_chainStyle="packed"

            app:layout_constraintLeft_toRightOf="@id/filter_background"
            app:layout_constraintRight_toLeftOf="@id/ib_dropdown_arrow"
            app:layout_constraintTop_toTopOf="@id/filter_white_background" />

        <ImageButton
            android:id="@+id/ib_dropdown_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:layout_marginRight="16dp"
            android:background="@drawable/ic_dropdown_arrow"
            app:layout_constraintBottom_toBottomOf="@id/filter_white_background"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/filter_white_background"

            />

        <View
            android:id="@+id/filter_white_background_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@id/filter_background_2"
            app:layout_constraintLeft_toRightOf="@id/label_select_motorcycle_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/filter_background_2"

            />

        <ImageView
            android:id="@+id/filter_background_2"
            android:layout_width="180dp"
            android:layout_height="37.5dp"
            android:layout_marginTop="1.5dp"
            android:background="@drawable/rectangle_blue_slanted_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_background" />

        <TextView
            android:id="@+id/label_select_motorcycle_2"
            style="@style/suzukiTextBody2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:letterSpacing="0.04"
            android:text="SELECT MOTORCYCLE 2"
            android:textColor="@android:color/white"
            android:textSize="11.5sp"

            app:layout_constraintBottom_toBottomOf="@id/filter_background_2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/filter_background_2"
            app:layout_constraintRight_toRightOf="@id/filter_background_2"
            app:layout_constraintTop_toTopOf="@id/filter_background_2" />

        <AutoCompleteTextView
            android:id="@+id/tv_filter_value_2"
            style="@style/suzukiTextBody2"
            android:layout_width="0dp"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:background="@android:color/transparent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginLeft="12dp"
            android:text=""
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@id/filter_white_background_2"
            app:layout_constraintHorizontal_bias="0"

            app:layout_constraintHorizontal_chainStyle="packed"

            app:layout_constraintLeft_toRightOf="@id/filter_background_2"
            app:layout_constraintRight_toLeftOf="@id/ib_dropdown_arrow"
            app:layout_constraintTop_toTopOf="@id/filter_white_background_2" />

        <ImageButton
            android:id="@+id/ib_dropdown_arrow_2"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:layout_marginRight="16dp"
            android:background="@drawable/ic_dropdown_arrow"
            app:layout_constraintBottom_toBottomOf="@id/filter_white_background_2"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/filter_white_background_2"

            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50"
            />


        <ImageView
            android:id="@+id/iv_motorcycle_1"
            android:layout_width="0dp"
            android:layout_height="108dp"
            android:padding="8dp"
            android:src="@drawable/img_crossover"

            app:layout_constraintBottom_toTopOf="@id/iv_motorcycle_logo_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/filter_white_background_2"

            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:visibility="invisible"

            android:background="@drawable/shape_rect_white_semi_rounded_corners_top"/>

        <ImageView
            android:id="@+id/iv_motorcycle_logo_1"
            android:layout_width="0dp"
            android:layout_height="37.5dp"

            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_crossover_logo"

            app:layout_constraintTop_toBottomOf="@id/iv_motorcycle_1"
            app:layout_constraintBottom_toTopOf="@id/rv_motor_details_1"
            app:layout_constraintLeft_toLeftOf="@id/iv_motorcycle_1"
            app:layout_constraintRight_toRightOf="@id/iv_motorcycle_1"
            android:background="@android:color/white"
            android:layout_marginBottom="1.5dp"
            android:visibility="invisible"

            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_motor_details_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            app:layout_constraintTop_toBottomOf="@id/iv_motorcycle_logo_1"
            app:layout_constraintLeft_toLeftOf="@id/iv_motorcycle_logo_1"
            app:layout_constraintRight_toRightOf="@id/iv_motorcycle_logo_2"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_motor_detail"
            android:background="@android:color/transparent"
            android:paddingBottom="60dp"
            android:overScrollMode="never"
            />

        <ImageView
            android:id="@+id/iv_motorcycle_2"
            android:layout_width="0dp"
            android:layout_height="108dp"
            android:padding="8dp"
            android:src="@drawable/img_crossover"

            app:layout_constraintBottom_toTopOf="@id/iv_motorcycle_logo_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/vertical_guideline"
            app:layout_constraintTop_toTopOf="@id/iv_motorcycle_1"

            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_rect_white_semi_rounded_corners_top"
            android:visibility="invisible"

            />

        <ImageView
            android:id="@+id/iv_motorcycle_logo_2"
            android:layout_width="0dp"
            android:layout_height="37.5dp"

            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_crossover_logo"

            app:layout_constraintTop_toBottomOf="@id/iv_motorcycle_2"
            app:layout_constraintBottom_toBottomOf="@id/iv_motorcycle_logo_1"
            app:layout_constraintLeft_toLeftOf="@id/iv_motorcycle_2"
            app:layout_constraintRight_toRightOf="@id/iv_motorcycle_2"
            android:background="@android:color/white"
            android:layout_marginBottom="1.5dp"
            android:visibility="invisible"

            />


        <!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_motor_details_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_motorcycle_logo_2"
                app:layout_constraintLeft_toLeftOf="@id/iv_motorcycle_logo_2"
                app:layout_constraintRight_toRightOf="@id/iv_motorcycle_logo_2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                tools:listitem="@layout/item_motor_detail"
                />
        -->

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_no_motorcycles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="img_motorcycle,label_no_registered_motorcycle"
            android:visibility="visible"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>