<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"


    app:cardElevation="1dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/iv_main_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        tools:src="@tools:sample/backgrounds/scenic"
        android:scaleType="centerCrop"

        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_main_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_type"
        app:layout_constraintHorizontal_bias="0"

        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"

        style="@style/suzukiHeader2"
        android:text="Get a Free Raider J Crossover Quarter Face Helmet"

        />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"

        style="@style/suzukiTextBody2"
        android:textColor="@color/color_blue_300"
        android:textSize="10sp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="6dp"
        android:text="PROMO"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tv_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_type"
        app:layout_constraintLeft_toRightOf="@id/tv_type"
        app:layout_constraintRight_toLeftOf="@id/tv_caption"
        android:background="@color/color_black_alpha80"
        />

    <TextView
        android:id="@+id/tv_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/tv_type"
        app:layout_constraintLeft_toRightOf="@id/divider"
        app:layout_constraintRight_toRightOf="parent"

        style="@style/suzukiTextWhatsNewCaption"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="6dp"
        android:text="Promo Period: Mar 15 - Aug 31,2020"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>