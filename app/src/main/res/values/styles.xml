<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_blue_300</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="cornerFamily">cut</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="suzukiHeader1">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_blue_100</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="suzukiHeader2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_blue_100</item>
    </style>

    <style name="suzukiTextBody1">
        <item name="android:textSize">9.5sp</item>
        <item name="android:textColor">@color/color_blue_100</item>
    </style>

    <style name="suzukiTextLink" parent="suzukiTextBody1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_blue_200</item>
    </style>

    <style name="suzukiEditText1">
        <item name="android:background">@color/color_blue_1000</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/color_blue_100</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="suzukiButton1">
        <item name="android:minWidth">180dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_rectangle_blue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="backgroundTint">@color/color_blue_200</item>
    </style>

    <style name="suzukiButtonFacebook">
        <item name="android:minWidth">180dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@color/color_facebook_blue</item>
    </style>

</resources>
