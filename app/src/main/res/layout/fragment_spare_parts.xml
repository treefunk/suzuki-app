<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_main_bg"
    tools:context=".features.motorcycle_models.MotorcycleModelsFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="130dp"
    android:layout_marginBottom="10dp"
    >


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/filter_background"

        android:layout_marginTop="10dp"

        style="@style/suzukiHeader1"
        android:text="SPARE PARTS"
        android:elevation="1dp"

        tools:ignore="NotSibling" />

    <!--

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_spare_parts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"

            tools:listitem="@layout/item_spare_part"
            tools:itemCount="11"
            tools:orientation="vertical"
            tools:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            tools:spanCount="3"
            />
    -->
    <View
        android:id="@+id/box_tires"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_cooling_fan_filter"
        app:layout_constraintBottom_toTopOf="@id/box_drive_belt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_tires"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_tires"
        app:layout_constraintLeft_toLeftOf="@id/box_tires"
        app:layout_constraintRight_toRightOf="@id/box_tires"
        app:layout_constraintBottom_toTopOf="@id/label_tires"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/label_tires"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_tires"
        app:layout_constraintRight_toRightOf="@id/box_tires"
        app:layout_constraintBottom_toBottomOf="@id/box_tires"
        style="@style/suzukiFullMenuLabel"
        android:text="TIRE"
        />

    <View
        android:id="@+id/box_cooling_fan_filter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/box_tires"
        app:layout_constraintRight_toLeftOf="@id/box_engine_oil"
        app:layout_constraintBottom_toTopOf="@id/box_battery"

        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_cooling_fan_filter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_cooling_fan_filter"
        app:layout_constraintLeft_toLeftOf="@id/box_cooling_fan_filter"
        app:layout_constraintRight_toRightOf="@id/box_cooling_fan_filter"
        app:layout_constraintBottom_toTopOf="@id/label_cooling_fan_filter"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/label_cooling_fan_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_cooling_fan_filter"
        app:layout_constraintRight_toRightOf="@id/box_cooling_fan_filter"
        app:layout_constraintBottom_toBottomOf="@id/box_cooling_fan_filter"
        style="@style/suzukiFullMenuLabel"
        android:text="COOLING FAN\nFILTER"
        />

    <View
        android:id="@+id/box_engine_oil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/box_cooling_fan_filter"
        app:layout_constraintBottom_toTopOf="@id/box_brake_fluid"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_engine_oil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_engine_oil"
        app:layout_constraintLeft_toLeftOf="@id/box_engine_oil"
        app:layout_constraintRight_toRightOf="@id/box_engine_oil"
        app:layout_constraintBottom_toTopOf="@id/label_engine_oil"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/label_engine_oil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_engine_oil"
        app:layout_constraintRight_toRightOf="@id/box_engine_oil"
        app:layout_constraintBottom_toBottomOf="@id/box_engine_oil"
        style="@style/suzukiFullMenuLabel"
        android:text="ENGINE\nOIL"
        />

    <View
        android:id="@+id/box_drive_belt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_tires"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_battery"
        app:layout_constraintBottom_toTopOf="@id/box_brake_pad"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_drive_belt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_drive_belt"
        app:layout_constraintLeft_toLeftOf="@id/box_drive_belt"
        app:layout_constraintRight_toRightOf="@id/box_drive_belt"
        app:layout_constraintBottom_toTopOf="@id/label_drive_belt"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/label_drive_belt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_drive_belt"
        app:layout_constraintRight_toRightOf="@id/box_drive_belt"
        app:layout_constraintBottom_toBottomOf="@id/box_drive_belt"
        style="@style/suzukiFullMenuLabel"
        android:text="DRIVE\nBELT"
        />

    <View
        android:id="@+id/box_battery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_cooling_fan_filter"
        app:layout_constraintLeft_toRightOf="@id/box_drive_belt"
        app:layout_constraintRight_toLeftOf="@id/box_brake_fluid"
        app:layout_constraintBottom_toTopOf="@id/box_brake_shoe"

        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_battery"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_battery"
        app:layout_constraintLeft_toLeftOf="@id/box_battery"
        app:layout_constraintRight_toRightOf="@id/box_battery"
        app:layout_constraintBottom_toTopOf="@id/label_battery"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/label_battery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/iv_battery"
        app:layout_constraintLeft_toLeftOf="@id/box_battery"
        app:layout_constraintRight_toRightOf="@id/box_battery"
        app:layout_constraintBottom_toBottomOf="@id/box_battery"
        style="@style/suzukiFullMenuLabel"
        android:text="BATTERY"
        />

    <View
        android:id="@+id/box_brake_fluid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_engine_oil"
        app:layout_constraintLeft_toRightOf="@id/box_battery"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box_spark_plug"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_brake_fluid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_brake_fluid"
        app:layout_constraintLeft_toLeftOf="@id/box_brake_fluid"
        app:layout_constraintRight_toRightOf="@id/box_brake_fluid"
        app:layout_constraintBottom_toTopOf="@id/label_brake_fluid"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/label_brake_fluid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_brake_fluid"
        app:layout_constraintRight_toRightOf="@id/box_brake_fluid"
        app:layout_constraintBottom_toBottomOf="@id/box_brake_fluid"
        style="@style/suzukiFullMenuLabel"
        android:text="BRAKE\nFLUID"
        />

    <View
        android:id="@+id/box_brake_pad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_drive_belt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_brake_shoe"
        app:layout_constraintBottom_toTopOf="@id/box_air_cleaner_element"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_brake_pad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_brake_pad"
        app:layout_constraintLeft_toLeftOf="@id/box_brake_pad"
        app:layout_constraintRight_toRightOf="@id/box_brake_pad"
        app:layout_constraintBottom_toTopOf="@id/label_brake_pad"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/label_brake_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_brake_pad"
        app:layout_constraintRight_toRightOf="@id/box_brake_pad"
        app:layout_constraintBottom_toBottomOf="@id/box_brake_pad"
        style="@style/suzukiFullMenuLabel"
        android:text="BRAKE\nPAD"
        />

    <View
        android:id="@+id/box_brake_shoe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_battery"
        app:layout_constraintLeft_toRightOf="@id/box_brake_pad"
        app:layout_constraintRight_toLeftOf="@id/box_spark_plug"
        app:layout_constraintBottom_toTopOf="@id/box_air_cleaner_element"


        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"


        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_brake_shoe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_brake_shoe"
        app:layout_constraintLeft_toLeftOf="@id/box_brake_shoe"
        app:layout_constraintRight_toRightOf="@id/box_brake_shoe"
        app:layout_constraintBottom_toTopOf="@id/label_brake_shoe"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/label_brake_shoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_brake_shoe"
        app:layout_constraintRight_toRightOf="@id/box_brake_shoe"
        app:layout_constraintBottom_toBottomOf="@id/box_brake_shoe"
        style="@style/suzukiFullMenuLabel"
        android:text="BRAKE\nSHOE"
        />

    <View
        android:id="@+id/box_spark_plug"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_brake_fluid"
        app:layout_constraintLeft_toRightOf="@id/box_brake_shoe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box_air_cleaner_element"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"


        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_spark_plug"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_spark_plug"
        app:layout_constraintLeft_toLeftOf="@id/box_spark_plug"
        app:layout_constraintRight_toRightOf="@id/box_spark_plug"
        app:layout_constraintBottom_toTopOf="@id/label_spark_plug"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/label_spark_plug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_spark_plug"
        app:layout_constraintRight_toRightOf="@id/box_spark_plug"
        app:layout_constraintBottom_toBottomOf="@id/box_spark_plug"
        style="@style/suzukiFullMenuLabel"
        android:text="SPARK\nPLUG"
        />

    <View
        android:id="@+id/box_air_cleaner_element"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_brake_pad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/box_oil_filter"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginRight="4dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        />

    <ImageView
        android:id="@+id/iv_air_cleaner_element"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_air_cleaner_element"
        app:layout_constraintLeft_toLeftOf="@id/box_air_cleaner_element"
        app:layout_constraintRight_toRightOf="@id/box_air_cleaner_element"
        app:layout_constraintBottom_toTopOf="@id/label_air_cleaner_element"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/label_air_cleaner_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_air_cleaner_element"
        app:layout_constraintRight_toRightOf="@id/box_air_cleaner_element"
        app:layout_constraintBottom_toBottomOf="@id/box_air_cleaner_element"
        style="@style/suzukiFullMenuLabel"
        android:text="AIR CLEANER\nELEMENT"
        />
    <View
        android:id="@+id/box_oil_filter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/box_brake_pad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/box_air_cleaner_element"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginLeft="4dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:background="@drawable/shape_rect_white_semi_rounded_corners"
        android:layout_marginBottom="4dp"

        />

    <ImageView
        android:id="@+id/iv_oil_filter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/box_oil_filter"
        app:layout_constraintLeft_toLeftOf="@id/box_oil_filter"
        app:layout_constraintRight_toRightOf="@id/box_oil_filter"
        app:layout_constraintBottom_toTopOf="@id/label_oil_filter"
        android:elevation="2dp"
        android:background="?android:selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/label_oil_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintLeft_toLeftOf="@id/box_oil_filter"
        app:layout_constraintRight_toRightOf="@id/box_oil_filter"
        app:layout_constraintBottom_toBottomOf="@id/box_oil_filter"
        style="@style/suzukiFullMenuLabel"
        android:text="OIL\nFILTER"
        />



</androidx.constraintlayout.widget.ConstraintLayout>